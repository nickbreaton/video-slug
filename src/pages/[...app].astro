---
import App from '@/client/components/App';
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

// Generate a single root path - React handles client-side routing
export function getStaticPaths() {
  return [{ params: { app: undefined } }];
}

const {
  title = 'VideoSlug',
  description = 'Add videos from around the internet to your personal library and download to your device for convenient offline viewing'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Geist+Mono:wght@100..900&display=swap" rel="stylesheet" />
  </head>
  <body
    class="bg-neutral-1 text-neutral-12"
    style="
      font-family: var(--font-geist-sans, 'Geist', sans-serif);
      --font-geist-sans: 'Geist', sans-serif;
      --font-geist-mono: 'Geist Mono', monospace;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    "
  >
    <App client:only="react" />
  </body>
</html>
