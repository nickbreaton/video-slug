{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "@effect/language-service",
      },
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mts", "src/**/*", ".astro/types.d.ts", "styled-system"],
  "exclude": ["node_modules", "dist", ".astro"],
}
